/**
 * @file SymptoScan Firestore Security Rules
 * @version Prototyping Mode - Authorization Focused
 *
 * @description
 * This ruleset enforces a strict user-ownership model for personal data
 * (users, medical histories, diagnoses) and allows public read access to
 * doctor profiles. Data schema validation is relaxed to facilitate rapid
 * prototyping but critical authorization checks are strictly enforced.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Only the user with the matching ID can access their profile.
 * - /users/{userId}/medicalHistories/{medicalHistoryId}: Stores medical histories for each user.
 *   Only the user with the matching ID can access their medical history.
 * - /users/{userId}/diagnoses/{diagnosisId}: Stores diagnoses associated with each user.
 *   Only the user with the matching ID can access their diagnoses.
 * - /doctors/{doctorId}: Stores doctor profiles. Public read access is allowed, but write access is restricted.
 * - /diagnoses/{diagnosisId}/doctorRecommendations/{doctorRecommendationId}: Stores doctor recommendations
 *   related to diagnoses.
 *
 * Key Security Decisions:
 * - User data is strictly segregated under /users/{userId} to enforce ownership.
 * - Doctor profiles are publicly readable to facilitate discovery.
 * - List operations are restricted to the owner of user-specific data.
 * - Doctor write operations are denied and should be secured using a different authorization mechanism.
 * - Data validation is minimal, focusing on authorization-critical fields.
 *
 * Denormalization for Authorization:
 * - The data structure uses path-based ownership for user-related data. Each user's data (medical history, diagnoses, and doctor recommendations) is stored under the `/users/{userId}` path, eliminating the need for `get()` calls in security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user authentication.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user ID matches the authenticated user's ID.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return {bool} True if the user ID matches the authenticated user's ID, false otherwise.
     */
    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner and the resource exists.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return {bool} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description
     * Provides read and write access to user profiles based on ownership.
     *
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile if authenticated as 'user123'.
     *    request.auth.uid: 'user123'
     *    request.resource.data.id: 'user123'
     * @deny (create) User with ID 'user123' cannot create a profile for 'user456'.
     *    request.auth.uid: 'user123'
     *    request.resource.data.id: 'user456'
     * @principle Enforces document ownership for writes and validates relational integrity on create.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing all users

      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * Provides read and write access to medical histories based on user ownership.
     *
     * @path /users/{userId}/medicalHistories/{medicalHistoryId}
     * @allow (create) User with ID 'user123' can create a medical history entry under their profile.
     *    request.auth.uid: 'user123'
     *    request.resource.data.userId: 'user123'
     * @deny (update) User with ID 'user123' cannot modify another user's medical history.
     *    request.auth.uid: 'user123'
     *    resource.data.userId: 'user456'
     * @principle Restricts access to a user's own medical history entries.
     */
    match /users/{userId}/medicalHistories/{medicalHistoryId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * Provides read and write access to diagnoses based on user ownership.
     *
     * @path /users/{userId}/diagnoses/{diagnosisId}
     * @allow (create) User with ID 'user123' can create a diagnosis under their profile.
     *    request.auth.uid: 'user123'
     *    request.resource.data.userId: 'user123'
     * @deny (delete) User with ID 'user123' cannot delete another user's diagnosis.
     *    request.auth.uid: 'user123'
     *    resource.data.userId: 'user456'
     * @principle Restricts access to a user's own diagnosis entries.
     */
    match /users/{userId}/diagnoses/{diagnosisId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * Provides public read access to doctor profiles, but restricts write access.
     *
     * @path /doctors/{doctorId}
     * @allow (get) Any user, signed in or not, can retrieve doctor profiles.
     * @deny (create) No one can create, update, or delete doctor profiles without proper authorization.
     * @principle Allows public read access but restricts write access.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Implement appropriate admin-level security
    }

     /**
      * @description
      * Controls access to doctor recommendations, ensuring only the associated user can access them.
      *
      * @path /diagnoses/{diagnosisId}/doctorRecommendations/{doctorRecommendationId}
      * @allow (get) User with ID matching the diagnosis's userId can retrieve doctor recommendations.
      *    request.auth.uid: 'user123'
      *    Diagnosis.userId: 'user123' (requires get() to fetch Diagnosis)
      * @deny (update) User with ID 'user123' cannot update another user's doctor recommendation.
      *    request.auth.uid: 'user123'
      *    Diagnosis.userId: 'user456' (requires get() to fetch Diagnosis)
      * @principle Restricts access to doctor recommendations based on user ownership of the associated diagnosis.
      */
    match /diagnoses/{diagnosisId}/doctorRecommendations/{doctorRecommendationId} {
        allow get: if get(/databases/$(database)/documents/diagnoses/$(diagnosisId)).data.userId == request.auth.uid;
        allow list: if get(/databases/$(database)/documents/diagnoses/$(diagnosisId)).data.userId == request.auth.uid;

        allow create: if isSignedIn() && get(/databases/$(database)/documents/diagnoses/$(diagnosisId)).data.userId == request.auth.uid;
        allow update: if isSignedIn() && get(/databases/$(database)/documents/diagnoses/$(diagnosisId)).data.userId == request.auth.uid;
        allow delete: if isSignedIn() && get(/databases/$(database)/documents/diagnoses/$(diagnosisId)).data.userId == request.auth.uid;
    }
  }
}