
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions to simplify rule logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can only read and write to their own document in the 'users' collection.
      // This is for storing profile information that is not personally identifiable.
      allow read, write: if isSignedIn() && isOwner(userId);

      // Rules for the 'diagnoses' subcollection
      match /diagnoses/{diagnosisId} {
        // A user can perform all operations (create, read, list, update, delete) 
        // on their own documents in their 'diagnoses' subcollection.
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
  }
}
